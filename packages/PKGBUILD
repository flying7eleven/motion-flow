# Maintainer: Tim HÃ¼tz <tim@huetz.biz>
pkgname=motion-flow
pkgver=0.0.2
pkgrel=1
pkgdesc="Motion flow analysis on image series."
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="https://github.com/thuetz/motion-flow/"
license=('MIT')
makedepends=('rustup')

build() {
    rustup toolchain install stable
    rustup default stable
    cargo build --release
    return 0
}

package() {
    mkdir -p $pkgdir/usr/bin
    cp ../../target/release/motionflow $pkgdir/usr/bin/
}
